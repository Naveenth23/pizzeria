                                                                        <p><%= fmly.description %></p>
                                                                    </div>
                                                                </a>
                                                        </div>
                                                        <div class="menu_footer">
                                                            <div class="rate">
                                                                <div class="product rate" style="width:68%"></div>
                                                            </div>
                                                            <div class="price">
                                                                <span>$<%= fmly.price %></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }else{ %> 
